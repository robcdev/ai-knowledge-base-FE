# Development Dockerfile for Angular with hot-reload
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose Angular dev server port
EXPOSE 4200

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "4200"]

